<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">
    <RelativeLayout
        android:id="@+id/re_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#333333">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIF信息"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="26dp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/exif_img"
        android:layout_width="wrap_content"
        android:layout_height="300dp" />
    <TextView
        android:id="@+id/exif_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="品牌"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20sp"/>
    <TextView
        android:id="@+id/exif_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="型号"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20sp"/>
    <TextView
        android:id="@+id/exif_ptype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="大小"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20sp"/>
    <TextView
        android:id="@+id/exif_camera_lens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="镜头"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20sp"/>
    <TextView
        android:id="@+id/exif_focal_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="焦距"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20sp"/>
    <TextView
        android:id="@+id/exif_iso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ISO"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20sp"/>
    <TextView
        android:id="@+id/exif_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20sp"/>
    <TextView
        android:id="@+id/exif_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="经度"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20sp"/>
    <TextView
        android:id="@+id/exif_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="纬度"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20sp"/>
    <TextView
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地点"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20sp"/>
    <com.baidu.mapapi.map.MapView
         android:id="@+id/mapView"
         android:layout_width="match_parent"
         android:layout_height="200dp"/>
</LinearLayout>