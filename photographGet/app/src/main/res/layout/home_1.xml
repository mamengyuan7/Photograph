<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/liner"
    android:scrollY="@dimen/cardview_default_elevation"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/img_huodong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_1_item_back"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/lll"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="五一劳动节摄影活动"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:background="@drawable/beijing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="春天的色彩"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:background="@drawable/home_1_item_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="新春摄影活动"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ct" />

</LinearLayout>
