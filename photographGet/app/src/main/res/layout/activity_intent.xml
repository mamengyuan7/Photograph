<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:text="如何通过色彩搭配提高作品感染力"
        android:textColor="#101010"
        android:textSize="20sp"
        tools:text="如何通过色彩搭配提高作品感染力" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     一杯刚泡好热气腾腾的茶，被露水沾湿的花朵，挂在门口的雨伞，一小碗应季的李子，角落里玩耍的小奶猫。"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/rw1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="    落在窗帘上的一束光，湖面泛起的涟漪与波光，海洋馆自在漂浮的水母，每一个瞬间都是点滴的美。"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/rw2" />


</LinearLayout>